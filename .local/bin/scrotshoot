#!/bin/sh

chosen=$(printf "󰍹  Window\n󰆞  Select" | rofi -dmenu -i )

targetDir=~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png

case "$chosen" in
  "󰍹  Window") 
    scrot "$targetDir"
    notify-send -e "  Screenshot saved"
    ;;
  "󰆞  Select") 
    scrot --select --freeze "$targetDir"
    notify-send -e "  Screenshot saved"
    ;;
  *) 
    exit 1 
    ;;
esac

