#!/bin/bash

# You need to have the "apache2" package installed
current_dir=$(pwd)
dir_name=$(basename "$current_dir")
destination_dir="/var/www/html/"

read -p "Vas a montar un proyecto PHP en la carpeta $destination_dir. ¿Estás seguro que te encuentras en el Directorio raiz de tu Proyecto? (Y/n): " response
response=${response,,}

if [[ "$response" == "y" || "$response" == "yes" || -z "$response" ]]; then
    sudo mount --bind "$current_dir" "$destination_dir"
    echo "El directorio se ha montado exitosamente en $destination_dir."
else
    echo "Operación Abortada."
    exit 1
fi
