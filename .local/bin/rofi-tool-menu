#!/bin/bash

caffeine=$(caffeine-mode)
scrot='󰄄'
calendar=''
notification='󰂚'

chosen=$(echo -e "$caffeine\n$scrot\n$calendar\n$notification" | rofi -dmenu -theme ~/.config/rofi/themes/toolmenu_v.rasi )

case "$chosen" in
  "$caffeine") caffeine-mode --toggle ;;
  "$scrot")  dunstify -u normal scrot executed;;
  "$calendar") show-calendar-days ;;
  "$notification") dunstify -u notification executed;;
esac

