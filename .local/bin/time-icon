#!/usr/bin/env bash

while true; do
    
    hour=$(date +%H)

    case "$hour" in
        06)  icon="" ;;               # 06:00
        07|08|09|10) icon="" ;;       # 07–10
        11|12)      icon="" ;;       # 11–12
        13|14|15|16)icon="" ;;       # 13–16
        17)         icon="" ;;       # 17
        18)         icon="" ;;       # 18
        19|20|21|22)icon="" ;;       # 19–22
        23|00)      icon="󰖔" ;;       # 23–00
        01|02|03|04)icon="" ;;       # 01–04
        05)         icon="" ;;       # 05
        *)          icon="" ;;       # fallback
    esac

    echo "$icon"

    now_s=$(date +%s)

    next_hour=$((10#$hour + 1))

    if [ "$next_hour" -eq 24 ]; then
        next_date=$(date -d "+1 day" +"%Y-%m-%d")
        next_ts=$(date -d "$next_date 00:00:00" +%s)
    else
        today=$(date +"%Y-%m-%d")
        next_ts=$(date -d "$today $next_hour:00:00" +%s)
    fi

    sleep_seconds=$(( next_ts - now_s ))
    sleep "$sleep_seconds"

done
